<div class="container">
    <section>
        <img id="logo" src="assets/img/burgatory-neg.png">
    </section>
</div>

<div class="container">
    <div class="row">
        <div class="col-container">
        <div class="col-md-6 dbSection" id="onTheMenu">
            <h3>In Heaven...</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6 dbSection" id="devoured">
            <h3>In Hell...</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li><b>{{burger_name}}</b></li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
        </div>
    </div>
    <div class="row" id="form">
        <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What do you want to eat?"></textarea>
        </div>
        <button class="submit" type="submit">Add Burger</button>
    </form>
    </div>
</div>
